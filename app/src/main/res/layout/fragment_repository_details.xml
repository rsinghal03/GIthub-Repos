<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="viewModel"
            type="com.example.githubrepos.ui.repository.repositorydetails.RepositoryDetailsViewModel" />

    </data>

    <ScrollView
        android:id="@+id/details_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/details_repo_name"
                android:textColor="@color/titleColor"
                android:textSize="@dimen/repo_name_size"
                android:layout_marginStart="@dimen/margin_dimen_16"
                android:layout_marginEnd="@dimen/margin_dimen_16"
                android:layout_marginTop="@dimen/margin_dimen_16"
                android:layout_marginBottom="@dimen/margin_dimen_12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/details_repo_description"
                android:textColor="?android:textColorPrimary"
                android:textSize="@dimen/repo_description_size"
                android:layout_margin="@dimen/margin_dimen_16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/details_issues_header"
                android:textColor="@color/titleColor"
                android:textSize="@dimen/repo_description_size"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp" />

            <LinearLayout
                android:id="@+id/details_issues"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/details_contributor_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/titleColor"
                android:textSize="@dimen/repo_description_size"
                android:layout_margin="16dp" />

            <LinearLayout
                android:id="@+id/details_contributor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </LinearLayout>

    </ScrollView>
</layout>